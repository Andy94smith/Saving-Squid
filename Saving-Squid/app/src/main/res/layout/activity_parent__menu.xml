<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asprogramming.saving_squid.Parent_Menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/parent_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/set_chore_button"
            android:layout_marginBottom="67dp"
            android:layout_height="40dp"
            android:layout_width="300dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="31dp" />

        <Button
            android:id="@+id/check_chore_button"
            android:layout_height="40dp"
            android:layout_width="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/set_chore_button"
            android:layout_marginTop="110dp" />

    </RelativeLayout>
</RelativeLayout>
